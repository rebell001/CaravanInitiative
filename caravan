#include "logo.h"

class logo:public URLhandler{
   public:
   logo() : URLhandler("caravan.logo"){}
   void output(genericObject *fobj,Runnable* r,File *of){
      htmlObject *obj=new htmlObject(new Buffer(sRESPONSE,strlen(sRESPONSE)+1));
      obj->putValue("Content-type","image/gif");
      obj->putValue("cache-control","cache");
      addObject(obj,fobj);
      of->write((char*)logobuff,sizeof(logobuff));
      }
   };

extern char* versionString;

